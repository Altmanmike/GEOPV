{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle catégorie d'articles{% endblock %}

{% block body %}

    <section class="container w-75 mx-auto my-5">
        <h1 class="text-center mb-3">Nouvelle catégorie d'articles</h1>
        {{ form_start(newCategoryPostForm) }}
            {{ form_row(newCategoryPostForm.title) }}
            {{ form_row(newCategoryPostForm.content) }}
            {{ form_row(newCategoryPostForm.picture) }}
            <button type="submit" class="btn btn-primary btn-lg my-3">Envoyer</button>
        {{ form_end(newCategoryPostForm) }}
    </section>

{% endblock %}