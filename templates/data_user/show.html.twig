{% extends 'base.html.twig' %}

{% block title %}Voir les informations utilisateur{% endblock %}

{% block body %}

    <section class="container mx-auto my-5">
        <div class="card text-center w-50 mx-auto">
            <div class="card-header">
                <h5 class="card-title">Utilisateur du compte n°{{ user.id }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text mb-4"><strong>E-mail :</strong> {{ user.email }}</p>
                <p class="card-text mb-4"><strong>Prénom :</strong> {{ user.firstname }}</p>
                <p class="card-text mb-4"><strong>Nom :</strong> {{ user.lastname }}</p>
                <p class="card-text mb-4"><strong>Rôle sur le site :</strong> {% if user.roles == '["ROLE_USER"]' %}Utilisateur{% endif %}</p>
                <p class="card-text mb-4"><strong>Téléphone :</strong> {{ user.phone }}</p>
                <p class="card-text mb-4"><strong>Entreprise :</strong> {{ user.company }}</p>
                <p class="card-text mb-4"><strong>Code postal :</strong> {{ user.zipcode }}</p>
                <p class="card-text"><strong>Ville :</strong> {{ user.city }}</p>
            </div>
            <div class="card-footer">
                <p class="card-text"><strong>Compte crée le :</strong> {{ user.created_at }}</p>
                {% if (user.id == u.id) %}
                <p class="card-text mt-3"><strong>Éditer votre profil : &nbsp;</strong><a href="{{path('app_data_user_editOne', {id: user.id} )}}" ><i class="fa fa-pencil"></i></a></p>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}




