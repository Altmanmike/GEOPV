{% extends 'base.html.twig' %}

{% block title %}Voir les informations de l'article{% endblock %}

{% block body %}

    <section class="container mx-auto my-5">
        <div class="card text-center w-50 mx-auto">
            <div class="card-header">
                <h1 class="card-title">Article n°{{ post.id }}</h1>
            </div>
            <div class="card-body">                
                <p class="card-text mb-4">Envoyé par: {{ post.user.firstname }} {{ post.user.lastname }}</p>
                <p class="card-text mb-4">Titre: {{ post.title }}</p>
                <p class="card-text">Contenu: {{ post.content }}</p>
            </div>
            <div class="card-footer">
                <p class="card-text">Crée le: {{ post.createdAt.format('d/m/Y') }}</p>
            </div>            
        </div>
    </section>  

    {% for comment in comments %}
    
    <section class="container mx-auto my-5">
        <div class="card text-center w-50 mx-auto">
            <div class="card-header">
                <h5 class="card-title">Commentaire n°{{ comment.id }}</h5>
            </div>
            <div class="card-body">                
                <p class="card-text mb-4">Envoyé par: {{ comment.user.firstname }} {{ comment.user.lastname }}</p>
                <p class="card-text">Contenu: {{ comment.content }} </p>
            </div>
            <div class="card-footer">
                <p class="card-text">Envoyé le: {{ comment.createdAt.format('d/m/Y') }}</p>
            </div>
        </div>
    </section>  

    {% endfor %}

    {% if ticket.completedAt == null %}

    <section class="container w-75 mx-auto my-5">
        <h1 class="text-center mb-3">Répondre</h1>
        {{ form_start(newAnswerForm) }}       
            {{ form_row(newAnswerForm.content) }}     
        <button type="submit" class="btn btn-primary btn-lg my-3">Envoyer</button>
        {{ form_end(newAnswerForm) }}
    </section>

    {% endif %}
    
{% endblock %}