{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle catégorie de tickets{% endblock %}

{% block body %}

    <section class="container w-75 mx-auto my-5">
        <h1 class="text-center mb-3">Nouvelle catégorie de tickets</h1>
        {{ form_start(newCategoryTicketForm) }}
            {{ form_row(newCategoryTicketForm.title) }}
            {{ form_row(newCategoryTicketForm.content) }}
            {{ form_row(newCategoryTicketForm.picture) }}
            <button type="submit" class="btn btn-primary btn-lg my-3">Envoyer</button>
        {{ form_end(newCategoryTicketForm) }}
    </section>

{% endblock %}