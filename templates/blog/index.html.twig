{% extends 'base.html.twig' %}

{% block title %}Blog de l'appli!{% endblock %}

{% block body %}
    <div class="container my-5 p-0">
        <div class="row g-4">
        {% for post in posts %}
            <div class="card" style="width: 18rem;">
                <img src="{{ post.picture }}" class="card-img-top" alt="pic post">
                <div class="card-body">
                    <h5 class="card-title my-3">{{ post.title }}</h5>
                    <p class="card-text my-2">{{ post.content }}</p>
                    <a href="{{path('app_user_showPost', {id: post.id} )}}" class="btn btn-primary my-1">Lire</a>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
